<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AkuBelajarVisual.MainWindow"
        Title="Simple Form"
        Width="400"
        Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Username:" Margin="0,0,0,10"/>
        <TextBox Name="UsernameTextBox" Width="200" Margin="0,0,0,20"/>
        <TextBlock Text="Password:" Margin="0,0,0,10"/>
        <TextBox Name="PasswordBox" Width="200" Margin="0,0,0,20"/> <!-- Correct usage -->
        <Button Name="SubmitButton" Content="Submit" Width="100" HorizontalAlignment="Left" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
